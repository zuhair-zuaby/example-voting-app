
pipeline {
    agent {
        docker {
            image 'node:8.16.0-alpine'
        }
    }
    stages {
        stage('build') {
            when {
                changeset '**/result/**'
            }
            steps {
                echo 'Compiling result docker '
                dir('result') {
                    sh 'npm install'
                }
            }
        }
        stage('result') {
            when {
                changeset '**/result/**'
            }
            steps {
                echo 'Running Unit Tets for docker'
                dir('result') {
                    sh 'npm test'
                }
            }
        }
    }
    post {
        always {
            echo 'Building multibranch pipeline for worker is completed..'
        }
    }
}
